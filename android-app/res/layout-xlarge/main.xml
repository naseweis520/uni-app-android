<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/home_screen_background"
    android:id="@+id/relativeid">
    <LinearLayout android:layout_height="wrap_content"
                    android:id="@+id/first_row" android:layout_alignParentTop="true"
                    android:layout_width="fill_parent" android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:layout_width="90dp"
                    android:layout_height="90dp" android:background="@drawable/news_button"
                    android:id="@+id/newsBtn" android:clickable="true"
                    android:gravity="left" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                    />
            <TextView android:layout_width="90dp" android:layout_height="20dp" android:text="@string/newsText"
                      android:textStyle="bold" android:textSize="12sp"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_below="@+id/newsBtn" android:textColor="#000000" android:id="@+id/newsTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:layout_width="90dp"
                    android:layout_height="90dp" android:background="@drawable/restaurant_button"
                    android:id="@+id/restaurantBtn" android:clickable="true"
                    android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="90dp" android:layout_height="20dp" android:text="@string/mensa_text"
                      android:textStyle="bold" android:textSize="12sp"
                      android:gravity="center_vertical|center_horizontal" android:layout_below="@+id/restaurantBtn"
                      android:textColor="#000000" android:id="@+id/restaurantTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:layout_width="90dp"
                    android:layout_height="90dp" android:background="@drawable/campus_button"
                    android:id="@+id/campusBtn" android:layout_alignParentLeft="true" android:clickable="true"/>
            <TextView android:layout_width="90dp" android:layout_height="20dp" android:text="@string/campusText"
                      android:textStyle="bold" android:textSize="12sp"
                      android:gravity="center_vertical|center_horizontal" android:layout_below="@+id/campusBtn"
                      android:textColor="#000000" android:id="@+id/campusTxt"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:layout_height="wrap_content"
                    android:id="@+id/second_row" android:layout_alignParentTop="true"
                    android:layout_width="fill_parent" android:layout_marginTop="145dp"
                    android:layout_centerHorizontal="true"
        android:weightSum="3"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:layout_width="90dp"
                    android:layout_height="90dp" android:background="@drawable/events_button"
                    android:id="@+id/eventsBtn" android:clickable="true"
                    android:gravity="left" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <TextView android:layout_width="90dp" android:layout_height="20dp" android:text="@string/eventsText"
                      android:textStyle="bold" android:textSize="12sp"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_below="@+id/eventsBtn" android:textColor="#000000" android:id="@+id/eventsTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:layout_width="90dp"
                    android:layout_height="90dp" android:background="@drawable/bus_button"
                    android:id="@+id/busBtn" android:clickable="true"
                    android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="90dp" android:layout_height="20dp" android:text="@string/busText"
                    android:textStyle="bold" android:textSize="12sp" android:gravity="center_vertical|center_horizontal"
                    android:layout_below="@+id/busBtn" android:textColor="#000000" android:id="@+id/busTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="110dp"
            android:layout_weight="1"
            android:gravity="center">
            <Button android:layout_width="90dp"
                    android:layout_height="90dp" android:background="@drawable/search_for_staff_button"
                    android:id="@+id/staffBtn" android:layout_alignParentLeft="true" android:clickable="true"/>
            <TextView android:layout_width="90dp" android:layout_height="20dp" android:text="@string/staff_searchText"
                      android:textStyle="bold" android:textSize="12sp"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_below="@+id/staffBtn" android:textColor="#000000" android:id="@+id/staffTxt"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView android:layout_width="285dp"
               android:layout_height="120dp" android:background="@drawable/uds_logo"
        android:adjustViewBounds="true"
               android:layout_above="@+id/textView5"
               android:layout_centerHorizontal="true"
               android:contentDescription="uni logo"></ImageView>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="@string/c_saarbruecken"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/uni_real"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="49dp"/>
</RelativeLayout>