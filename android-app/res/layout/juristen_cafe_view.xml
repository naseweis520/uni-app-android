<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" android:background="@drawable/home_screen_background">

    <TextView
            android:id="@+id/during_semester"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_horizontal" android:textColor="@color/uni_blue" android:text="@string/during_semester"
            android:layout_marginTop="60dp" android:textSize="18sp" android:singleLine="true"
            android:textStyle="normal" android:layout_marginLeft="10dp"/>

    <TableRow
            android:layout_width="310dp"
            android:layout_height="20dp"
        android:layout_below="@+id/during_semester"
        android:layout_alignLeft="@+id/tableRow">
        <TextView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:id="@+id/mon_to_thu"
                android:text="@string/mon_to_thur" android:textSize="12sp" android:textColor="#000000"
                android:singleLine="true"/>
        <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/mon_to_thur_time"
                android:text="@string/mon_to_thur_juristen_cafe_time" android:textSize="12sp" android:singleLine="true"
                android:textColor="#000000"/>
    </TableRow>

    <TableRow
            android:layout_width="310dp"
            android:layout_height="20dp" android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
        android:id="@+id/tableRow">
        <TextView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:id="@+id/fri"
                android:text="@string/friday" android:textSize="12sp" android:textColor="#000000"
                android:singleLine="true"/>
        <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/fri_time"
                android:text="@string/friday_time_juristen" android:textSize="12sp" android:singleLine="true"
                android:textColor="#000000"/>
    </TableRow>

    <TextView
            android:id="@+id/during_semester_break"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_horizontal" android:textColor="@color/uni_blue" android:text="@string/during_break"
            android:layout_marginTop="210dp" android:textSize="18sp" android:singleLine="true"
            android:textStyle="normal" android:layout_marginLeft="10dp"/>


    <TableRow
            android:layout_width="310dp"
            android:layout_height="20dp"
        android:layout_below="@+id/during_semester_break"
        android:layout_marginLeft="30dp">
        <TextView
                android:layout_width="180dp"
                android:layout_height="20dp"
                android:id="@+id/mon_to_fri_break"
                android:text="@string/mon_to_fri" android:textSize="12sp" android:textColor="#000000"
                android:singleLine="true" />
        <TextView
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:id="@+id/friday_time_break"
                android:text="@string/mon_to_fri_juristen_cafe_time_break" android:textSize="12sp" android:singleLine="true"
                android:textColor="#000000"/>
    </TableRow>
</RelativeLayout>