<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="110dp"
        android:minHeight="110dp"
        android:layout_width="fill_parent"
        android:id="@+id/news_item_row"
        android:background="#636363">
        <RelativeLayout android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_marginTop="2dp"
            android:minHeight="110dp"
            android:background="@drawable/news_row_button">
        <TextView android:layout_width="200dp" android:layout_height="wrap_content" android:text="dummy"
                  android:textStyle="normal" android:textSize="16dp" android:id="@+id/news_title"
                  android:gravity="center_vertical|left" android:visibility="visible" android:textColor="#051ea5"
                  android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                  android:layout_marginTop="5dp" android:layout_marginLeft="5dp"
                />
        <TextView android:layout_width="280dp" android:layout_height="wrap_content" android:text="dummy jdfhshdashjljas jasdkfhasdjlfhsda jasdjsdhf"
                  android:textStyle="normal" android:textSize="16dp" android:id="@+id/news_description"
                  android:gravity="left|top" android:visibility="visible" android:textColor="#000000"
                  android:layout_alignParentBottom="false" android:layout_alignParentLeft="false"
                  android:layout_marginLeft="5dp"
                  android:layout_alignParentTop="true" android:layout_marginTop="30dp"/>
        <ImageButton android:layout_height="20dp" android:layout_width="20dp"
                     android:id="@+id/forward_icon"
                     android:layout_alignParentRight="true" android:layout_centerVertical="true"
                     android:visibility="visible" android:layout_marginRight="10dp" android:clickable="true"
                     android:background="@drawable/forward" android:contentDescription="@string/empty_string"/>
    </RelativeLayout>
</RelativeLayout>