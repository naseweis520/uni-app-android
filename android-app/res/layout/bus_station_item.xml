<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="40dp" android:background="@drawable/news_row_button"
                android:minHeight="40dp">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:minHeight="37dp" android:layout_marginTop="3dp"
            >

        <TextView android:layout_width="140dp" android:layout_height="25dp"
                  android:text="dummy jdfhshdash"
                  android:textStyle="normal" android:textSize="14dp" android:id="@+id/bus_station_title"
                  android:gravity="center_vertical|left" android:visibility="visible" android:textColor="#000000"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="5dp"
                  android:layout_centerVertical="true"/>
        <TextView android:layout_width="90dp" android:layout_height="25dp"
                  android:id="@+id/bus_station_detail" android:layout_alignParentRight="true"
                  android:gravity="center_vertical|right" android:visibility="visible" android:textColor="#000000"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="35dp"/>
        <ImageButton android:layout_height="20dp" android:layout_width="20dp"
                     android:id="@+id/forward_icon"
                     android:layout_alignParentRight="true" android:layout_centerVertical="true"
                     android:visibility="visible" android:layout_marginRight="10dp" android:clickable="true"
                     android:background="@drawable/forward" android:contentDescription="@string/empty_string"/>
    </RelativeLayout>
</RelativeLayout>