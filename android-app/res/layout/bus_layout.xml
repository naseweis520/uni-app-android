<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/home_screen_background">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="225dp"
                    android:id="@+id/bus_stations_view">
        <TextView android:layout_height="30dp" android:layout_width="fill_parent" android:text="@string/bus_stations_text"
                  android:textColor="#000000" android:layout_marginTop="2dp" android:layout_marginLeft="5dp"
                  android:gravity="center_vertical|left" android:textStyle="bold" android:textSize="16dp"/>
        <ListView android:layout_width="fill_parent" android:layout_height="190dp"
                  android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                  android:layout_marginTop="35dp" android:id="@+id/bus_stations_list_view">

        </ListView>
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:id="@+id/bus_search_view" android:layout_alignParentTop="true"
                    android:layout_marginTop="230dp">
        <TextView android:layout_height="30dp" android:layout_width="fill_parent" android:text="@string/bus_search_text"
                  android:textColor="#000000" android:layout_marginTop="2dp" android:layout_marginLeft="5dp"
                  android:gravity="center_vertical|left" android:textStyle="bold" android:textSize="16dp"/>
        <ListView android:layout_width="fill_parent" android:layout_height="70dp"
                  android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                  android:layout_marginTop="35dp" android:id="@+id/search_list_view">

        </ListView>
    </RelativeLayout>

</RelativeLayout>