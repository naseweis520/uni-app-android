<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/home_screen_background">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/bus_stations_view">
        <TextView android:layout_height="30dp" android:layout_width="fill_parent" android:text="@string/bus_stations_text"
                  android:textColor="#000000" android:layout_marginTop="5dp" android:layout_marginLeft="10dp"
                  android:gravity="center_vertical" android:textStyle="bold" android:textSize="16dp"
            android:id="@+id/textView"
            android:layout_alignParentTop="false"
            android:layout_marginBottom="5dp" />
        <ListView android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/bus_stations_list_view"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="false"
            android:layout_alignParentBottom="false">

        </ListView>

        <TextView android:layout_height="30dp" android:layout_width="fill_parent" android:text="@string/bus_search_text"
                  android:textColor="#000000"
            android:gravity="center_vertical|left" android:textStyle="bold" android:textSize="16dp"
            android:layout_alignParentTop="false"
            android:layout_alignParentLeft="false"
            android:id="@+id/textView2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/bus_stations_list_view" />

        <ListView android:layout_width="fill_parent" android:layout_height="wrap_content"
            android:id="@+id/search_list_view"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false">

        </ListView>
    </RelativeLayout>

</RelativeLayout>