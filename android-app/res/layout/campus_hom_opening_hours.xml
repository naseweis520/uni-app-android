<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:background="@drawable/home_screen_background">

    <TextView
        android:id="@+id/during_semester"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_horizontal" android:textColor="@color/uni_blue" android:text="@string/during_semester"
        android:layout_marginTop="20dp" android:textSize="18sp" android:singleLine="true"
        android:textStyle="normal" android:layout_marginLeft="10dp"/>

    <TableRow
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:id="@+id/tableRow"
        android:layout_below="@+id/during_semester"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:id="@+id/mon_to_thu"
            android:text="@string/mon_to_fri" android:textSize="12sp" android:textColor="#000000"
            android:singleLine="true"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/mon_to_thur_time"
            android:textSize="12sp" android:singleLine="false"
            android:textColor="#000000"
            android:text="@string/mon_to_fri_time_hom" />

    </TableRow>

    <TableRow
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:id="@+id/tableRow2"
        android:layout_below="@+id/tableRow"
        android:layout_alignLeft="@+id/tableRow">

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:id="@+id/textView"
            android:text="@string/serving"
            android:textSize="12sp"
            android:textColor="#000000"
            android:singleLine="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/textView2"
            android:textSize="12sp"
            android:singleLine="false"
            android:textColor="#000000"
            android:text="@string/mon_to_fri_time_hom" />
    </TableRow>

    <TextView
        android:id="@+id/during_semester_break"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:gravity="left|center_horizontal" android:textColor="@color/uni_blue" android:text="@string/during_break"
        android:textSize="18sp" android:singleLine="true"
        android:textStyle="normal"
        android:layout_below="@+id/tableRow2"
        android:layout_alignLeft="@+id/during_semester" />


    <TableRow
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:layout_below="@+id/during_semester_break"
        android:id="@+id/tableRow3"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:id="@+id/mon_to_fri_break"
            android:text="@string/mon_to_fri" android:textSize="12sp" android:textColor="#000000"
            android:singleLine="true"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/friday_time_break"
            android:text="@string/mon_to_fri_time_hom_break" android:textSize="12sp" android:singleLine="true"
            android:textColor="#000000"/>

    </TableRow>

    <TableRow
        android:layout_width="310dp"
        android:layout_height="20dp"
        android:id="@+id/tableRow4"
        android:layout_below="@+id/tableRow3"
        android:layout_alignLeft="@+id/tableRow3">

        <TextView
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:id="@+id/tex"
            android:text="@string/serving"
            android:textSize="12sp"
            android:textColor="#000000"
            android:singleLine="true" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:id="@+id/textView4"
            android:text="@string/mon_to_fri_time_hom_break"
            android:textSize="12sp"
            android:singleLine="true"
            android:textColor="#000000" />
    </TableRow>

</RelativeLayout>