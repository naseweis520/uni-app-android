<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:id="@+id/search_field_row"
                android:minHeight="50dp"
                android:background="#636363">
    <RelativeLayout android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="2dp"
                    android:minHeight="50dp"
                    android:background="@drawable/news_row_button">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:id="@+id/category_icon" android:contentDescription="@string/empty_string"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="3dp"
                   android:layout_centerVertical="true"/>


        <TextView android:layout_width="240dp" android:layout_height="wrap_content" android:text="dummy"
                  android:textStyle="normal" android:textSize="16dp" android:id="@+id/title"
                  android:visibility="visible" android:textColor="#000000"
                  android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
                  android:layout_marginLeft="40dp"
                  android:layout_marginTop="2dp" android:singleLine="true"/>
        <TextView android:layout_width="240dp" android:layout_height="wrap_content" android:text="dummy"
                  android:textStyle="normal" android:textSize="12dp" android:id="@+id/description"
                  android:visibility="visible" android:textColor="#828282"
                  android:layout_alignParentTop="false" android:layout_alignParentLeft="true"
                  android:layout_marginLeft="40dp"
                  android:layout_marginTop="25dp" android:singleLine="true"/>
    </RelativeLayout>
</RelativeLayout>