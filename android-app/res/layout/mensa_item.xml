<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:minHeight="87dp"
              android:layout_height="wrap_content" android:background="#eeeeee">
    <TextView android:layout_width="fill_parent" android:layout_height="25dp" android:text="dummy"
              android:textStyle="bold" android:textSize="18dp" android:id="@+id/mensa_menu_category"
              android:gravity="center_vertical|center_horizontal" android:visibility="visible" android:textColor="#000000"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
            />
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="45dp"
              android:textStyle="normal" android:id="@+id/mensa_menu_detail_background"
              android:gravity="center_vertical|center_horizontal" android:visibility="visible" android:textColor="#000000"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_marginTop="25dp" android:background="#ff5634"/>
    <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:minHeight="45dp" android:text="dummy"
              android:textStyle="normal" android:textSize="14dp" android:id="@+id/mensa_menu_detail"
              android:gravity="center_vertical|center_horizontal" android:visibility="visible" android:textColor="#000000"
              android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
              android:layout_marginTop="25dp" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
              android:background="#ffffff"/>
    <TextView android:layout_width="fill_parent" android:layout_height="15dp" android:text="dummy" android:minHeight="15dp"
              android:textStyle="normal" android:textSize="10dp" android:id="@+id/mensa_menu_price"
              android:gravity="center_vertical|center_horizontal" android:visibility="visible" android:textColor="#000000"
              android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
              android:layout_marginBottom="2dp" android:layout_alignBottom="@+id/mensa_menu_detail"/>

</RelativeLayout>