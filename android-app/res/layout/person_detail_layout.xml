<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/home_screen_background">

    <WebView android:id="@+id/web_view" android:layout_width="fill_parent" android:layout_height="fill_parent"
             android:layout_marginBottom="30dp" android:visibility="invisible"/>

    <ImageView android:layout_width="fill_parent" android:layout_height="30dp"
               android:background="@drawable/bottom_bar_background"
               android:id="@+id/bottom_image" android:contentDescription="@string/empty_string"
               android:layout_alignParentBottom="true"/>
    <ImageButton android:id="@+id/back_button" android:layout_height="25dp" android:layout_width="25dp"
                 android:layout_alignParentBottom="true"
                 android:background="@drawable/ic_action_back"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="2.5dp" />

    <ImageButton android:id="@+id/forward_button" android:layout_height="25dp" android:layout_width="25dp"
        android:background="@drawable/ic_action_forward"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_toRightOf="@+id/back_button"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="2.5dp" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/progress_bar"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>