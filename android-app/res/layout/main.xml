<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/relativeid"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/first_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:baselineAligned="true"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/newsBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/news_button"
                android:clickable="true"
                android:gravity="left"
                />

            <TextView
                android:id="@+id/newsTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/newsBtn"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/newsText"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/restaurantBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/restaurant_button"
                android:clickable="true"/>

            <TextView
                android:id="@+id/restaurantTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/restaurantBtn"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/mensa_text"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/campusBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/campus_button"
                android:clickable="true"/>

            <TextView
                android:id="@+id/campusTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/campusBtn"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/campusText"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="145dp"
        android:baselineAligned="true"
        android:weightSum="3">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/eventsBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/events_button"
                android:clickable="true"
                android:gravity="left"/>

            <TextView
                android:id="@+id/eventsTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/eventsBtn"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/eventsText"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/busBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bus_button"
                android:clickable="true"/>

            <TextView
                android:id="@+id/busTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/busBtn"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/busText"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/staffBtn"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/search_for_staff_button"
                android:clickable="true"/>

            <TextView
                android:id="@+id/staffTxt"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/staffBtn"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/staff_searchText"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="2dp"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/text_campus"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/second_row">

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="285dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@drawable/uds_logo"
                android:contentDescription="uni logo"></ImageView>

            <TextView
                android:id="@+id/campusText"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:text="@string/c_saarbruecken"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/uni_real"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>