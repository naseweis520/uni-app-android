<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:background="@drawable/home_screen_background">
    <RelativeLayout android:layout_height="wrap_content"
                    android:id="@+id/first_row" android:layout_alignParentTop="true"
                    android:layout_width="wrap_content" android:layout_marginTop="30dp"
                    android:layout_centerHorizontal="true">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">
            <Button android:layout_width="80dp"
                    android:layout_height="80dp" android:background="@drawable/news_button"
                    android:id="@+id/newsBtn" android:clickable="true"
                    android:gravity="left" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
                    />
            <TextView android:layout_width="80dp" android:layout_height="20dp" android:text="@string/newsText"
                      android:textStyle="bold" android:textSize="12dp"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_below="@+id/newsBtn" android:textColor="#000000" android:id="@+id/newsTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp" android:layout_marginLeft="105dp">
            <Button android:layout_width="80dp"
                    android:layout_height="80dp" android:background="@drawable/restaurant_button"
                    android:id="@+id/restaurantBtn" android:clickable="true"
                    android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="80dp" android:layout_height="20dp" android:text="@string/mensa_text"
                      android:textStyle="bold" android:textSize="12dp"
                      android:gravity="center_vertical|center_horizontal" android:layout_below="@+id/restaurantBtn"
                      android:textColor="#000000" android:id="@+id/restaurantTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp" android:layout_marginLeft="210dp">
            <Button android:layout_width="80dp"
                    android:layout_height="80dp" android:background="@drawable/campus_button"
                    android:id="@+id/campusBtn" android:layout_alignParentLeft="true" android:clickable="true"/>
            <TextView android:layout_width="80dp" android:layout_height="20dp" android:text="@string/campusText"
                      android:textStyle="bold" android:textSize="12dp"
                      android:gravity="center_vertical|center_horizontal" android:layout_below="@+id/campusBtn"
                      android:textColor="#000000" android:id="@+id/campusTxt"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout android:layout_height="wrap_content"
                    android:id="@+id/second_row" android:layout_alignParentTop="true"
                    android:layout_width="wrap_content" android:layout_marginTop="135dp"
                    android:layout_centerHorizontal="true">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp">
            <Button android:layout_width="80dp"
                    android:layout_height="80dp" android:background="@drawable/events_button"
                    android:id="@+id/eventsBtn" android:clickable="true"
                    android:gravity="left" android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
            <TextView android:layout_width="80dp" android:layout_height="20dp" android:text="@string/eventsText"
                      android:textStyle="bold" android:textSize="12dp"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_below="@+id/eventsBtn" android:textColor="#000000" android:id="@+id/eventsTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp" android:layout_marginLeft="105dp">
            <Button android:layout_width="80dp"
                    android:layout_height="80dp" android:background="@drawable/bus_button"
                    android:id="@+id/busBtn" android:clickable="true"
                    android:layout_alignParentLeft="true"/>
            <TextView android:layout_width="80dp" android:layout_height="20dp" android:text="@string/busText"
                    android:textStyle="bold" android:textSize="12dp" android:gravity="center_vertical|center_horizontal"
                    android:layout_below="@+id/busBtn" android:textColor="#000000" android:id="@+id/busTxt"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp" android:layout_marginLeft="210dp">
            <Button android:layout_width="80dp"
                    android:layout_height="80dp" android:background="@drawable/search_for_staff_button"
                    android:id="@+id/staffBtn" android:layout_alignParentLeft="true" android:clickable="true"/>
            <TextView android:layout_width="80dp" android:layout_height="20dp" android:text="@string/staff_searchText"
                      android:textStyle="bold" android:textSize="12dp"
                      android:gravity="center_vertical|center_horizontal"
                      android:layout_below="@+id/staffBtn" android:textColor="#000000" android:id="@+id/staffTxt"/>
        </RelativeLayout>
    </RelativeLayout>
    <ImageView android:layout_width="285dp"
               android:layout_height="105dp" android:background="@drawable/uds_logo" android:layout_alignParentBottom="true"
               android:layout_centerHorizontal="true" android:adjustViewBounds="true"
               android:layout_marginBottom="50dp"></ImageView>
    <Button android:layout_width="80dp"
            android:layout_height="25dp"
            android:id="@+id/about_btn" android:layout_alignParentLeft="false" android:clickable="true"
            android:layout_alignParentBottom="true" android:layout_centerInParent="true" android:text="@string/aboutText"
            android:gravity="center_vertical|center_horizontal" android:textColor="#1519a4" android:textSize="16dp"
            android:textStyle="bold" android:layout_marginBottom="20dp" android:background="@android:color/transparent"/>
</RelativeLayout>