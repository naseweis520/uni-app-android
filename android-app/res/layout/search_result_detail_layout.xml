<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/home_screen_background"
                android:gravity="center">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/staff_info_scroll_view"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/scroll_view_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/nametext"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/name"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"
                />

            <Button
                android:id="@+id/name"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/nametext"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/gendertext"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@id/name"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/gender"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/gender"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/gendertext"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/academicText"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/gender"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/academic_degree"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/academic_degree"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/academicText"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/buildingText"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/academic_degree"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/building"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/building"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/buildingText"
                android:background="@drawable/list_item_selector"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/roomText"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/building"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/room"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/room"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/roomText"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/phoneText"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/room"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/phone"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/phone"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/phoneText"
                android:autoLink="phone"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/faxText"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/phone"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/fax"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/fax"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/faxText"
                android:autoLink="phone"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/emailText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fax"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:text="@string/email"
                android:textColor="#b8000000"
                android:textSize="16sp"
                android:textStyle="normal"/>

            <Button
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/emailText"
                android:autoLink="email"
                android:background="#FFFFFF"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/moreText"
                android:layout_width="fill_parent"
                android:layout_height="25dp"
                android:layout_below="@+id/email"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:textColor="@color/uni_blue"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/more"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_below="@+id/moreText"
                android:background="@drawable/list_item_selector"
                android:gravity="center_vertical|center_horizontal|clip_vertical|left"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="@string/more_info"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/more_forward_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/more"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_ab_back_holo_light_am"/>

            <ImageButton
                android:id="@+id/building_forward_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/building"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_ab_back_holo_light_am"/>

            <include
                layout="@layout/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>