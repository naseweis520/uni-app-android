<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/search_field_row"
                android:minHeight="50dp"
                android:background="#636363">
    <RelativeLayout android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
        android:minHeight="50dp"
                    android:background="@drawable/list_item_selector">

        <ImageView android:layout_width="30dp" android:layout_height="30dp"
                   android:id="@+id/category_icon" android:contentDescription="@string/empty_string"
                   android:layout_alignParentLeft="true" android:layout_marginLeft="10dp"
                   android:layout_centerVertical="true"/>


        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="dummy"
                  android:textStyle="normal|bold" android:textSize="12dp" android:id="@+id/title"
                  android:visibility="visible" android:textColor="#000000"
                  android:layout_alignParentTop="false" android:layout_alignParentLeft="false"
                  android:layout_marginLeft="50dp"
                  android:layout_marginTop="10dp" android:singleLine="false"
            android:layout_marginRight="10dp" />
        <TextView android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="dummy"
                  android:textStyle="normal" android:textSize="12dp" android:id="@+id/description"
                  android:visibility="visible" android:textColor="#828282"
                  android:layout_alignParentTop="false" android:layout_alignParentLeft="false"
                  android:layout_marginLeft="50dp"
            android:singleLine="false"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/title"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>
</RelativeLayout><!-- From: file:/C:/Users/Janek/AndroidStudioProjects/uni-app-android/android-app/res/layout/campus_search_row_layout.xml -->