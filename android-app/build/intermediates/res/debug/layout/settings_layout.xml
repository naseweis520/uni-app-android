<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:focusableInTouchMode="false"
        android:id="@+id/rG_choose_campus">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_campus"
            android:id="@+id/textView"
            android:textSize="20sp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:textColor="@color/uni_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_campus_hint"
            android:id="@+id/textView2"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:textColor="#ff6e7779" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_saarbruecken"
            android:id="@+id/rB_saar"
            android:checked="true" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/c_homburg"
            android:id="@+id/rb_hom" />

    </RadioGroup>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/bt_back"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="false"
        android:layout_alignLeft="@+id/bt_back"
        android:background="@drawable/list_item_selector"
        android:textColor="@color/uni_blue"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout><!-- From: file:/C:/Users/Janek/AndroidStudioProjects/uni-app-android/android-app/res/layout/settings_layout.xml -->